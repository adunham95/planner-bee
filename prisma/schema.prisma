generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id            String    @id
  email         String    @unique
  password_hash String
  sessions      Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model ECard {
  id          String           @id @default(uuid())
  sku         String           @unique
  name        String
  description String
  cost        Int
  components  ECardComponent[]
  cartIems    CartItem[]

  @@index([sku])
}

model ECardComponent {
  id          String                 @id @default(uuid())
  ecardID     String
  eCard       ECard                  @relation(references: [id], fields: [ecardID])
  value       String
  options     ECardComponentOption[]
  cartOptions CartItemOption[]
}

model ECardComponentOption {
  id               String         @id @default(uuid())
  ecardComponentID String
  ecardComponent   ECardComponent @relation(references: [id], fields: [ecardComponentID])
  key              String
  value            String
}

model Cart {
  id        String     @id @default(uuid())
  cartItems CartItem[]
}

model CartItem {
  id       String           @id @default(uuid())
  cartID   String
  cart     Cart             @relation(references: [id], fields: [cartID], onDelete: Cascade)
  ecardSku String
  eCard    ECard            @relation(references: [sku], fields: [ecardSku])
  options  CartItemOption[]
}

model CartItemOption {
  id               String         @id @default(uuid())
  cartItemID       String
  cartItem         CartItem       @relation(references: [id], fields: [cartItemID])
  value            String
  ecardComponentID String
  ecardComponent   ECardComponent @relation(references: [id], fields: [ecardComponentID])
}
